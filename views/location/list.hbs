<h1>list all locations</h1> 

<table class="table table-stripped">
    <thead>
        <tr>
            <th>City</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>
                <td>{{this.city}}</td>
                <td>{{this.title}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>
                    <a href="/locations/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>